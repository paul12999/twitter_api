<h1>Twitter#index</h1>


<p id="notice"><%= notice %></p>

<table width="50%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Content<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <table align="left" width="40%">
  <tr>
    <% User.all.each do |user|%>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.description %></td>
      </tr>
    <% end %>
  </tr>
  </table>
  
  <table align="left" width="40%">
  <tr>
    <% Tweet.all.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
      </tr>
    <% end %>
  </tr>  
  </table>  
  </tbody>
</table>
